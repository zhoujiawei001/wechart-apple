.banner {
  position: relative;
  height: 504rpx;
}
.banner .bg-img {
  width: 100%;
  height: 504rpx;
}
.banner .temp {
  position: absolute;
  top: 46%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 180rpx;
  font-weight: 100;
}
.banner .icons {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 48rpx 32rpx 48rpx;
}
.banner .icons image {
  width: 60rpx;
  height: 60rpx;
}
.container {
  width: 100%;
  height: calc(100% - 504rpx);
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.part-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.part-1 .btn {
  width: 100rpx;
  height: 100rpx;
  background-color: #fff;
  line-height: 100rpx;
  border-radius: 100%;
  text-align: center;
}
.part-1 .btn:active {
  background-color: rgba(0,0,0,.1);
}
.part-2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 144rpx;
  border-radius: 72rpx;
  background-color: #fff;
}
.btn-reduce {
  margin-left: 32rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.btn-reduce:active {
  background-color: rgba(0,0,0,.1);
}
.btn-plus {
  margin-right: 32rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.btn-plus:active {
  background-color: rgba(0,0,0,.1);
}
.part-3 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
.part-3 .btn-delay {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.part-3 .btn-delay:active {
  background-color: rgba(0,0,0,.1);
}
.part-3 .btn-power {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background-color: #3EA0EA;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}
.part-3 .btn-power:active {
  background-color: rgb(23, 115, 185);
}
.part-3 .btn-power image {
  width: 104rpx;
  height: 104rpx;
}
.part-3 .btn-power text {
  color:#fff;
}
.delay_time {
  color: #007dff;
}
.delay_time text:nth-child(2) {
  margin: 0 2rpx;
  animation: fadeInOut 2s infinite;
}
/** 手写谈入淡出 **/
@keyframes fadeInOut {
  0% {
    opacity: 1;
  }
  25% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  75% {
    opacity: 0;
  }
}