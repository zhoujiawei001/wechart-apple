.banner {
  position: relative;
  height: 504rpx;
}
.banner .bg-img {
  width: 100%;
  height: 504rpx;
}
.banner .temp {
  position: absolute;
  top: 46%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 140rpx;
}
.banner .icons {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 48rpx 32rpx 48rpx;
}
.banner .icons image {
  width: 60rpx;
  height: 60rpx;
}
.container {
  width: 100%;
  height: calc(100% - 504rpx);
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.part-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.part-1 .btn {
  width: 100rpx;
  height: 100rpx;
  background-color: #fff;
  line-height: 100rpx;
  border-radius: 100%;
  text-align: center;
}
.part-1 .btn:active {
  background-color: rgba(0,0,0,.1);
}
.part-2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 144rpx;
  border-radius: 72rpx;
  background-color: #fff;
}
.part-2 .btn {
  height: 72rpx;
  width: 72rpx;
  border-radius: 100%;
  border: 1px solid #000;
  box-sizing: border-box;
  line-height: 72rpx;
  text-align: center;
  font-size: 32rpx;
}
.btn-reduce {
  margin-left: 32rpx;
}
.btn-plus {
  margin-right: 32rpx;
}
.part-2 .btn:active {
  background-color: rgba(0,0,0,.1);
}
.part-3 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
.part-3 .btn-delay {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border: 1px solid #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.part-3 .btn-delay:active {
  background-color: rgba(0,0,0,.1);
}
.part-3 .btn-power {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background-color: #3EA0EA;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}
.part-3 .btn-power image {
  width: 64rpx;
  height: 64rpx;
}
.part-3 .btn-power text {
  color:#fff;
}