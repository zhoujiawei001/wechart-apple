.container {
  height: 100%;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.power{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 48rpx 0 32rpx 0;
}
.power view {
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
}
.power view:active {
  background-color: rgba(0,0,0,.1);
}
.power view image {
  width: 104rpx;
  height: 104rpx;
}
.other {
  padding: 72rpx 84rpx 0 84rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.other .btn {
  width: 50%;
  margin-bottom: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other .txt {
  width: 172rpx;
  height: 88rpx;
  border-radius: 88rpx;
  background-color: #fff;
  line-height: 88rpx;
  text-align: center;
}
.other .txt:active {
  background-color: rgba(0,0,0,.1);
}